<Window x:Class="WpfApp2.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Введите название"/>
            <TextBox x:Name="Name" Height="40" Margin="20 10"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content="Введите название"/>
            <TextBox x:Name="Price" Height="40" Margin="20 10"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Label Content="Введите название"/>
            <TextBox x:Name="VenorCode" Height="40" Margin="20 10"/>
        </StackPanel>
        <Button x:Name="SaveProduct" Content="Сохранить" Grid.Row="3" Margin="50 25"/>
    </Grid>
</Window>
